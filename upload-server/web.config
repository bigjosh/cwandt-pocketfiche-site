<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <security>
      <requestFiltering>
        <!-- Allow up to 50MB uploads (PNG images can be large before compression) -->
        <requestLimits maxAllowedContentLength="52428800" />
      </requestFiltering>
    </security>
    
    <!-- Disable ARR request buffering for upload endpoint to prevent truncation -->
    <rewrite>
      <rules>
        <rule name="Disable buffering for uploads">
          <match url="cgi-bin/app.py" />
          <action type="Rewrite" url="{R:0}" />
          <serverVariables>
            <set name="HTTP_X_ARR_DisableBuffering" value="true" />
          </serverVariables>
        </rule>
      </rules>
    </rewrite>
    
    <httpProtocol>
      <customHeaders>
        <!-- Add CORS headers if needed -->
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, OPTIONS" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
  
  <system.web>
    <!-- Increase max request length (in KB) and execution timeout -->
    <httpRuntime maxRequestLength="51200" executionTimeout="300" />
  </system.web>
</configuration>
