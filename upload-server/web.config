<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <security>
      <requestFiltering>
        <!-- Allow up to 50MB uploads (PNG images can be large before compression) -->
        <requestLimits maxAllowedContentLength="52428800" />
      </requestFiltering>
    </security>
    
    <!-- URL Rewrite rules to proxy to Waitress WSGI server -->
    <rewrite>
      <rules>
        <!-- Proxy admin.html and upload.html to Waitress -->
        <rule name="Proxy HTML files to Waitress" stopProcessing="true">
          <match url="^(admin\.html|upload\.html)$" />
          <action type="Rewrite" url="http://localhost:8080/{R:1}" />
        </rule>
        
        <!-- Proxy API requests to Waitress -->
        <rule name="Proxy API to Waitress" stopProcessing="true">
          <match url="^cgi-bin/app\.py(.*)$" />
          <action type="Rewrite" url="http://localhost:8080/{R:1}" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Application Request Routing (ARR) settings -->
    <proxy>
      <!-- Enable ARR buffering for complete requests -->
      <cache enabled="false" />
    </proxy>
    
    <httpProtocol>
      <customHeaders>
        <!-- Add CORS headers if needed -->
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, OPTIONS" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
  
  <system.web>
    <!-- Increase max request length (in KB) and execution timeout -->
    <httpRuntime maxRequestLength="51200" executionTimeout="300" />
  </system.web>
</configuration>
